<%- include('../../partials/head'); %>
  <!-- Page Content  -->
  <div id="content-page" class="content-page">
    <div class="container-fluid">
       <div class="row">
         
          <div class="col-sm-12 col-lg-12">
           
            <div class="iq-card">
                <div class="iq-card-header d-flex justify-content-between">
                   <div class="iq-header-title">
                      <h4 class="card-title">Batch Management</h4>
                   </div>
                </div>
                <div class="iq-card-body">
                   <p>Update batch information</p>
                   <form id="updatebatch">
                      <div class="form-group">
                         <label for="exampleInputText1">Name </label>
                         <input type="text" name="name" value="<%= batch.name %>" class="form-control" id="exampleInputText1"  required>
                      </div>
                      <div class="form-group">
                         <label for="exampleInputEmail3">Description</label>
                         <input type="text" class="form-control" name="description" value="<%= batch.description %>"  id="exampleInputEmail3" >
                      </div>
                      <div class="form-group">
                        <label for="exampleInputurl">Status</label>
                        <input type="text" class="form-control" value="<%= batch.status %>"  name="status" id="exampleInputurl" required>
                     </div>
                     <div class="form-group">
                       <label for="exampleInputphone">Type</label>
                       <input type="text" class="form-control" value="<%= batch.type %>"  name="type" id="exampleInputphone">
                    </div>
                     <div class="form-group">
                        <label for="exampleInputphone">Code</label>
                        <input type="text" class="form-control" value="<%= batch.code %>"  name="code" id="exampleInputphone">
                     </div>
                     <div class="form-group">
                        <label for="exampleInputNumber1">Souce branch</label>
                        <input type="text" name="source" value="<%= batch.source %>"  class="form-control" id="exampleInputNumber1" required>
                     </div>
                     <div class="form-group">
                        <label for="exampleInputPassword3">Destination branch</label>
                        <input type="text" name="destination" value="<%= batch.destination %>"  class="form-control" id="exampleInputPassword3" required>
                     </div>
                     
                      <div class="form-group">
                         <label for="exampleFormControlTextarea1">Notes</label>
                         <textarea class="form-control" name="notes" id="exampleFormControlTextarea1" rows="5"><%= batch.notes %></textarea>
                      </div>
                      <input hidden name="id" value="<%= batch.id%>"/>
                      <button type="submit" class="btn btn-primary">Submit</button>
                   </form>
                </div>
             </div>
           
         </div>
        
          
       </div>
    </div>
 </div>
</div>


<%- include('../../partials/footer'); %>
<script src="/js/appscripts/batch.js"></script>
