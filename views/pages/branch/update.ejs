<%- include('../../partials/head'); %>
  <!-- Page Content  -->
  <div id="content-page" class="content-page">
    <div class="container-fluid">
       <div class="row">
         
          <div class="col-sm-12 col-lg-12">
           
            <div class="iq-card">
                <div class="iq-card-header d-flex justify-content-between">
                   <div class="iq-header-title">
                      <h4 class="card-title">Branch Management</h4>
                   </div>
                </div>
                <div class="iq-card-body">
                   <p>Update branch information</p>
                   <form id="updatebranch">
                      <div class="form-group">
                         <label for="exampleInputText1">Name </label>
                         <input type="text" name="name" value="<%= branch.name %>" class="form-control" id="exampleInputText1"  required>
                      </div>
                      <div class="form-group">
                         <label for="exampleInputEmail3">Description</label>
                         <input type="text" class="form-control" name="description" value="<%= branch.description %>"  id="exampleInputEmail3" >
                      </div>
                      <div class="form-group">
                         <label for="exampleInputurl">Address 1</label>
                         <input type="text" class="form-control" value="<%= branch.address.address1 %>"  name="address1" id="exampleInputurl" required>
                      </div>
                      <div class="form-group">
                         <label for="exampleInputphone">Address 2</label>
                         <input type="text" class="form-control" name="address2" value="<%= branch.address.address2 %>"   id="exampleInputphone">
                      </div>
                      <div class="form-group">
                         <label for="exampleInputNumber1">City</label>
                         <input type="text" name="city" class="form-control" value="<%= branch.address.city %>"  id="exampleInputNumber1" required>
                      </div>
                      <div class="form-group">
                         <label for="exampleInputPassword3">State/Parish</label>
                         <input type="text" name="state" class="form-control" id="exampleInputPassword3" value="<%= branch.address.state %>"  required>
                      </div>
                      <div class="form-group">
                        <label for="exampleInputPassword3">Country</label>
                        <input type="text" name="country" class="form-control" id="exampleInputPassword3" value="<%= branch.address.country %>"  >
                     </div>
                   
                      <div class="form-group">
                         <label for="exampleFormControlTextarea1">Notes</label>
                         <textarea class="form-control" name="notes" id="exampleFormControlTextarea1" rows="5"><%= branch.notes %></textarea>
                      </div>
                      <input hidden name="id" value="<%= branch.id%>"/>
                      <button type="submit" class="btn btn-primary">Submit</button>
                   </form>
                </div>
             </div>
           
         </div>
        
          
       </div>
    </div>
 </div>
</div>


<%- include('../../partials/footer'); %>
<script src="/js/appscripts/branch.js"></script>
