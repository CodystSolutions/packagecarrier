<%- include('../../partials/head'); %>

      <!-- Page Content  -->
   <div id="content-page" class="content-page">
      <div class="container-fluid">
         <div class="row">
            <div class="col-sm-12">
                  <div class="iq-card">
                     <div class="iq-card-header d-flex justify-content-between">
                        <div class="iq-header-title">
                           <h4 class="card-title">View Packages</h4>
                        </div>
                     </div>
                     <div class="iq-card-body">
                        <div class="table-responsive">
                           <div class="row justify-content-between">
                           
                              <div class="col-sm-12 ">
                                 <div class="user-list-files d-flex float-right">
                                    <a href="/package/scan" class="iq-bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Add" href="#"><i class="ri-user-add-line"></i> Scan Packages</a>

                                   
                                     <!-- <a class="iq-bg-primary" href="javascript:void();">
                                       Pdf
                                     </a> -->
                                   </div>
                              </div>
                           </div>
                           <table id="user-list-table" class="table table-striped table-bordered mt-4" role="grid" aria-describedby="user-list-page-info">
                             <thead>
                                 <tr>
                                    <th>Name</th>
                                    <th>Tracking Number</th>
                                    <th>Code</th>
                                    <th>Source</th>

                                    <th>Destination</th>
                                    <th>Batch</th>

                                    <th>Status</th>
                                    <th>Created</th>
                                    <th>Action </th>
                                   
                                 </tr>
                             </thead>
                             <tbody>
                              <% for(var i = 0;  i < packages.length ; i++ ) { %>
                                 <tr>
                                     <td><%= packages[i].sender_first_name %> <%= packages[i].sender_last_name %></td>
                                     <td><%= packages[i].tracking_number %></td>
                                     <td><%= packages[i].code %></td>
                                     <td><%= packages[i].destination %></td>
                                     <td><%= packages[i].source %></td>

                                     <td><%= packages[i].batch?.name %></td>

                                     <td><%= packages[i].status %></td>
                                     <td><%= moment(packages[i].created_on).tz('America/Jamaica').format('YYYY/MM/DD HH:mm')%></td>

                                  
                                     
                                     <td>
                                        <div class="flex align-items-center list-user-action">
                                          <a class="iq-bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit" href="/package/details/<%= packages[i].id %>"><i class="ri-eye-line"></i></a>

                                           <a class="iq-bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit" href="/package/update/<%= packages[i].id %>"><i class="ri-pencil-line"></i></a>
                                           <a class="iq-bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete"  onclick="deletepackage(`<%= packages[i].id %>`)"><i class="ri-delete-bin-line"></i></a>
                                           <a class="iq-bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Label" onclick="generatelabel(`<%= packages[i].request_id%>`)"><i class="ri-price-tag-3-line"></i></a>

                                        </div>
                                     </td>
                                  </tr>
                             <% } %>
                               
                             </tbody>
                           </table>
                        </div>
