<%- include('../../partials/head'); %>

      <!-- Page Content  -->
   <div id="content-page" class="content-page">
      <div class="container-fluid">
         <div class="row">
            <div class="col-sm-12">
                <div class="iq-card">
                    <div class="iq-card-header d-flex justify-content-between">
                       <div class="iq-header-title">
                          <h4 class="card-title">Checkout Details</h4>
                       </div>
                       <div class="user-list-files d-flex float-right">
                           <a class="iq-bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit" href="/pickup/update/<%= collection_request.id %>"><i class="ri-pencil-line"></i></a>
                           <a class="iq-bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete" onclick="deletepickup(`<%= collection_request.id %>`)"><i class="ri-delete-bin-line"></i></a>
                           <a class="iq-bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Receipt" onclick="generatereceipt(`<%= collection_request.id%>`)"><i class="ri-bill-line"></i></a>

                      
                       </div>
                    </div>
                    <div class="iq-card-bod m-4">
                       <p>View pickup checkout details below.</p>
                       <h5 class="mb-4"><i style="color: green"  class="fa fa-address-card"></i> General Information:</h5>

                       <dl class="row">
                         <dt class="col-sm-3">Code </dt>
                         <dd class="col-sm-9"><%= collection_request.code %></dd>
                         <dt class="col-sm-3">Status </dt>
                         <dd class="col-sm-9"><%= collection_request.status %></dd>
                          <dt class="col-sm-3">Packages </dt>
                          <dd class="col-sm-9"><%= collection_request.packages %></dd>
                    
                          <dt class="col-sm-3">Description </dt>
                          <dd class="col-sm-9"><%= collection_request.description ?? 'Not Specified' %></dd>
                        
                          <dt class="col-sm-3">Type </dt>
                          <dd class="col-sm-9"><%= collection_request.type %></dd>
                          <dt class="col-sm-3">Method </dt>
                          <dd class="col-sm-9"><%= collection_request.method %></dd>
                    
                          <dt class="col-sm-3">Transaction </dt>
                          <dd class="col-sm-9"><%= collection_request.transaction?.order_number %> <a href="/transaction/view/<%=  collection_request.transaction?.id %>">View Transaction Details</a></dd>
                          
                           <dt class="col-sm-3">Total </dt>
                           <dd class="col-sm-9"><%= collection_request.transaction?.total %></dd>
                          
                          <dt class="col-sm-3 text-truncate">Notes</dt>
                          <dd class="col-sm-9"><%=collection_request.notes  %></dd>
                       </dl>
                       <hr/>
                       <div class="row section-div" >
                        <div class="col-md-12 p-3">
                           <h5 class="mb-4"> <i style="color: green" class="fa fa-user-circle" aria-hidden="true"></i> Collector Information:</h5>
                        
                           <div class="row">
                              <div class=" col-md-6 field-div">
                                 <span><b>First Name </b></span> <br/>
                                 <p><%= collection_request.collector_first_name ?? 'Not Specified' %></p>
                              </div>
                              
                              <div class=" col-md-6 field-div">
                                 <span><b>Last Name </b></span> <br/>
                                 <p><%= collection_request.collector_last_name ?? 'Not Specified' %></p>
                              </div>
                              <div class="col-md-6 field-div ">
                                 <span><b>Email </b></span> <br/>
                                 <p><%= collection_request.collector_email ?? 'Not Specified'  %></p>
                              </div>
                              
                        
                              <div class="col-md-6 field-div ">
                                 <span><b>Contact Number </b></span> <br/>
                                 <p><%= collection_request.collector_contact ?? 'Not Specified' %></p>
                              </div>
                             
                              
                              
                           </div>
                        </div>
                       </div>
                    </div>


                    <hr/>
                    
                 </div>
              
            </div>
         </div>
      </div>
   </div>
</div>

   
   <%- include('../../partials/footer'); %>
   <script src="/js/appscripts/pickup.js"></script>
