<%- include('../../partials/head'); %>

      <!-- Page Content  -->
   <div id="content-page" class="content-page">
      <div class="container-fluid">
         <div class="row">
          
            <div class="col-lg-12">
                  <div class="iq-card">
                     <div class="iq-card-header d-flex justify-content-between">
                        <div class="iq-header-title">
                           <h4 class="card-title">Update User Information</h4>
                        </div>
                     </div>
                     <div class="iq-card-body">
                        <div class="new-user-info">
                           <form id="updateadmin">
                              <div class="row">
                                 <div class="form-group col-md-6">
                                    <label for="fname">First Name:</label>
                                    <input type="text" class="form-control" name="first_name" value="<%= admin.first_name %>" id="fname" required>
                                 </div>
                                 <div class="form-group col-md-6">
                                    <label for="lname">Last Name:</label>
                                    <input type="text" class="form-control" name="last_name" value="<%= admin.last_name %>"  id="lname" required>
                                 </div>
                                 <div class="form-group col-md-6">
                                    <label for="add1">TRN:</label>
                                    <input type="text" maxlength="9" class="form-control" name="trn" value="<%= admin.trn %>"  id="add1" >
                                 </div>
                                
                                 <!-- <div class="form-group col-md-6">
                                    <label for="cname">Branch:</label>
                                    <input type="text" class="form-control" name="branch"  value="<%= admin.branch %>" id="cname" required>
                                 </div> -->
                                 <div class="form-group  col-md-6" >
                                    <label>Branch:</label>
                                    <select class="form-control" name="branch" required>
                                    
                                       <% for(var  i = 0; i < branches.length ; i++ ) { %>
                                          <%if(branches[i].name == admin.branch) { %>
                                             <option selected><%= branches[i].name %></option>
                                          <% } else { %>
                                             <option><%= branches[i].name %></option>
                                          <% }%>
                                          

                                       <% }%>
                                    </select>
                                 </div>
                                 <!-- <div class="form-group col-md-12">
                                    <label for="cname">Address:</label>
                                    <input type="text" class="form-control" name="address"  value="<%= admin.address %>"  id="cname" >
                                 </div> -->
                                 <div class="form-group  col-md-6" >
                                    <label>User Role:</label>
                                    <select class="form-control" name="role" required>
                                       <!-- <option>Select</option>
                                       <option>masteradmin</option>
                                       <option>superadmin</option>
                                       <option>admin</option>
                                       <option>manager</option>
                                       <option>stafflevel1</option>
                                       <option>stafflevel2</option>
                                       <option>stafflevel3 </option> -->
                                       <% for(var  i = 0; i < roles.length ; i++ ) { %>
                                          <%if(roles[i].name == admin.role) { %>
                                             <option selected><%= roles[i].name %></option>
                                          <% } else { %>
                                          <option><%= roles[i].name %></option>
                                          <% }%>
                                       <% }%>
                                    </select>
                                    <small>You can add roles here <a href="/role/add">Create Role</a></small>
                                 </div>
                                 <div class="form-group col-md-6">
                                    <label for="mobno">Mobile Number:</label>
                                    <input type="text" class="form-control" id="mobno" name="contact" value="<%= admin.contact %>"   required>
                                 </div>
                                
                                 <div class="form-group  col-md-6" >
                                    <label>Is Active:</label>
                                    <select class="form-control" name="is_active" required>
                                        <option>Select</option>
                                        <%if( admin.is_active == true) { %>
                                          <option value="true" selected>Active</option>
                                          <option value="false">Inactive</option>

                                        <%} else if( admin.is_active == false) { %>
                                          <option value="true" >Active</option>
                                             <option value="false" selected>Inactive</option>
                                        <% } else { %>
                                          <option value="true" >Active</option>
                                          <option value="false">Inactive</option>
                                          <% }  %>
                                      
                                    </select>
                                 </div>
                              </div>
                              <hr>
                              <h5 class="mb-3">Credentials</h5>
                              <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="email">Email:</label>
                                    <input type="email" class="form-control" name="email" id="email" value="<%= admin.email %>" required>
                                 </div>
                                
                                 <div class="form-group col-md-6">
                                    <label for="pass">Password:</label>
                                    <input type="password" class="form-control" name="password" id="pass" >
                                 </div>
                                 <div class="form-group col-md-6">
                                    <label for="rpass">Repeat Password:</label>
                                    <input type="password" class="form-control" name="confirmpassword" id="rpass"  >
                                 </div>
                              </div>
                              <input hidden name="id" value="<%= admin.id %>">
                              <!-- <div class="checkbox">
                                 <label><input class="mr-2" type="checkbox">Enable Two-Factor-Authentication</label>
                              </div> -->
                              <button type="submit" class="btn btn-primary">Update User</button>
                           </form>
                        </div>
                     </div>
                  </div>
            </div>
         </div>
      </div>
   </div>
   </div>
   <!-- Wrapper END -->
<%- include('../../partials/footer'); %>
<script src="/js/appscripts/user.js"></script>
